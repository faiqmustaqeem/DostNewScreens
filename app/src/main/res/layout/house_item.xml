<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/house_image"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/home1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/house_image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/house_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Crore"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:text="4 bed apppartment acvailable for sale in DHA"
                    android:layout_below="@id/house_price"/>

                <TextView
                    android:id="@+id/desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:text="Crescent bay , Dha phase 2 , DHA phase 2"
                    android:layout_below="@id/desc1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    >
                    <TextView
                        android:id="@+id/text_sq_ft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,600 sq. ft"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/text_no_of_beds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Beds"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>